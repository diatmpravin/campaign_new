<%= form_for(@budget) do |f| %>

  <table>
 <td>
   <tr> <%= f.label :title %>
    <%= f.text_field :title %></tr><br>
 
    <tr><%= f.label :budget %>
    <%= f.text_field :budget %></tr><br>
 
   <tr> <%= f.label :price %>
    <%= f.text_field :price %></tr><br>
</td>
<td>
    <%= f.label :description %>
    <%= f.text_area :description %>
 </td>
  </table>
  <style>
  textarea
  {
  height:100px;
  width:300px;
  }
  </style>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
