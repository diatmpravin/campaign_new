<h1>Listing budgets</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Budget</th>
    <th>Price</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @budgets.each do |budget| %>
  <tr>
    <td><%= budget.title %></td>
    <td><%= budget.budget %></td>
    <td><%= budget.price %></td>
    <td><%= budget.description %></td>
    <td><%= link_to 'Show', budget %></td>
    <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
    <td><%= link_to 'Destroy', budget, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

